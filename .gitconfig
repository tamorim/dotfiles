[user]
  name = Thor Amorim
  email = thoramorim@gmail.com
[color]
  ui = true
[core]
  editor = nvim
  pager = diff-so-fancy | less --tabs=4 -RFX
  excludesfile = ~/.gitignore
[alias]
  co = checkout
  ci = commit
  st = status
  br = branch
  lg = log --oneline --graph --pretty
  ps = push origin
  pl = pull -p --rebase
