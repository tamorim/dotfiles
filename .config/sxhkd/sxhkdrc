#
# wm independent hotkeys
#

# terminal emulator
super + Return
  termite

# program launcher
super + space
  rofi -modi "run,window" -show run

# window switcher
super + shift + space
  rofi -modi "run,window" -show window

# lock screen
super + l
  dm-tool lock

# make sxhkd reload its configuration files:
super + Escape
  pkill -USR1 -x sxhkd

# reload bspwm
super + shift + r
  ~/.config/bspwm/bspwmrc

#
# bspwm hotkeys
#

# quit bspwm normally
super + alt + Escape
  bspc quit

# close and kill
super + {_,shift + }w
  bspc node -{c,k}

# alternate between the tiled and monocle layout
super + m
  bspc desktop -l next

# if the current node is automatic, send it to the last manual, otherwise pull the last leaf
super + y
  bspc query -N -n focused.automatic && bspc node -n last.!automatic || bspc node last.leaf -n focused

# swap the current node and the biggest node
super + g
  bspc node -s biggest

#
# state/flags
#

# set the window state
super + {t,shift + t,s,f}
  bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# set the node flags
super + ctrl + {x,y,z}
  bspc node -g {locked,sticky,private}

#
# focus/swap
#

# focus the node in the given direction
super + {_,shift + }{Left,Down,Up,Right}
  bspc node -{f,s} {west,south,north,east}

# focus the node for the given path jump
super + {p,b,comma,period}
  bspc node -f @{parent,brother,first,second}

# focus the next/previous node
super + {_,shift + }Tab
  bspc node -f {next,prev}.local

# focus the next/previous desktop
super + bracket{left,right}
  bspc desktop -f {prev,next}.local; \
  dunstify -p -r (cat ~/.dunst_desktop 2>/dev/null; or echo 0) (sc-desktop) > ~/.dunst_desktop

# focus the older or newer node in the focus history
super + {o,i}
  bspc wm -h off; \
  bspc node {older,newer} -f; \
  bspc wm -h on

# focus on the given desktop
super + {1-8}
  bspc desktop -f '{I,II,III,IV,V,VI,VII,VIII}'; \
  dunstify -p -r (cat ~/.dunst_desktop 2>/dev/null; or echo 0) (sc-desktop) > ~/.dunst_desktop

# send to the given desktop
super + shift + {1-8}
  bspc node -d '{I,II,III,IV,V,VI,VII,VIII}'

# show current desktop
super + 0
  dunstify -p -r (cat ~/.dunst_desktop 2>/dev/null; or echo 0) (sc-desktop) > ~/.dunst_desktop

#
# preselect
#

# preselect the direction
super + ctrl + {h,j,k,l}
  bspc node -p {west,south,north,east}

# preselect the ratio
super + ctrl + {1-9}
  bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + space
  bspc node -p cancel

# cancel the preselection for the focused desktop
super + ctrl + shift + space
  bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

#
# resize tiled/floating
#

# expand the tiled space in the given direction
ctrl + super + {Left,Down,Up,Right}
  bspc node {@west -r -10,@south -r +10,@north -r -10,@east -r +10}

# contract the tiled space in the given direction
ctrl + super + shift + {Left,Down,Up,Right}
  bspc node {@east -r -10,@north -r +10,@south -r -10,@west -r +10}

# move a floating window
super + alt + {Left,Down,Up,Right}
  xdo move {-x -20,-y +20,-y -20,-x +20}

#
# monitor
#

# focus the next/previous monitor
super + ctrl + bracket{left,right}
  bspc monitor -f {prev,next}; \
  dunstify -p -r (cat ~/.dunst_monitor 2>/dev/null; or echo 0) (sc-monitor) > ~/.dunst_monitor


# show current monitor
super + ctrl + 0
  dunstify -p -r (cat ~/.dunst_monitor 2>/dev/null; or echo 0) (sc-monitor) > ~/.dunst_monitor

#
# custom stuff
#

# date
super + d
  dunstify -p -r (cat ~/.dunst_date 2>/dev/null; or echo 0) (sc-date) > ~/.dunst_date

# volume
super + v
  dunstify -p -r (cat ~/.dunst_volume 2>/dev/null; or echo 0) (sc-volume) > ~/.dunst_volume

# battery
super + shift + b
  dunstify -p -r (cat ~/.dunst_battery 2>/dev/null; or echo 0) (sc-battery) > ~/.dunst_battery

# network
super + n
  dunstify -p -r (cat ~/.dunst_network 2>/dev/null; or echo 0) (sc-network) > ~/.dunst_network

# spotify current
super + c
  dunstify -p -r (cat ~/.dunst_spotify_current 2>/dev/null; or echo 0) (sc-spotify-current-parsed) > ~/.dunst_spotify_current

XF86AudioMute
  amixer -q set Master toggle; \
  dunstify -p -r (cat ~/.dunst_volume 2>/dev/null; or echo 0) (sc-volume) > ~/.dunst_volume

XF86AudioNext
  playerctl next

XF86AudioPause
  playerctl pause

XF86AudioPlay
  playerctl play-pause; \
  test (playerctl status) = "Playing"; \
    and dunstify -p -r (cat ~/.dunst_spotify_current 2>/dev/null; or echo 0) (sc-spotify-current-parsed) > ~/.dunst_spotify_current

XF86AudioPrev
  playerctl previous

XF86AudioLowerVolume
  amixer -q set Master unmute; \
  amixer -q set Master 5%-; \
  dunstify -p -r (cat ~/.dunst_volume 2>/dev/null; or echo 0) (sc-volume) > ~/.dunst_volume

XF86AudioRaiseVolume
  amixer -q set Master unmute; \
  amixer -q set Master 5%+; \
  dunstify -p -r (cat ~/.dunst_volume 2>/dev/null; or echo 0) (sc-volume) > ~/.dunst_volume
