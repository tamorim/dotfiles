[user]
  name = Thor Amorim
  email = thoramorim@gmail.com
[color]
  ui = true
  [color "diff-highlight"]
    oldNormal = red bold
    oldHighlight = red bold 52
    newNormal = green bold
    newHighlight = green bold 22
  [color "diff"]
    meta = 227
    frag = magenta bold
    commit = 227 bold
    old = red bold
    new = green bold
    whitespace = red reverse
[core]
  editor = nvim
  pager = diff-so-fancy | less --tabs=4 -RFX
  excludesfile = ~/.gitignore
[alias]
  co = checkout
  ci = commit
  st = status
  br = branch
  lg = log --oneline --graph --pretty
  ps = push origin
  pl = pull -p --rebase
